<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
    >

  <ui:style>
    .headerMargin {
      margin-top: 71px;
    }
  </ui:style>

  <g:ScrollPanel>

    <b:Container>

      <b:Navbar position="FIXED_TOP">
        <b:NavbarBrand>gwt-jackson - Benchmark</b:NavbarBrand>
      </b:Navbar>

      <g:FlowPanel addStyleNames="{style.headerMargin}">

        <b:Form>
          <b:Legend>Benchmark options</b:Legend>

          <b:FieldSet>
            <b:Row>
              <b:Column size='MD_6'>
                <b:FormGroup>
                  <b:FormLabel for="nbItems">Number of items</b:FormLabel>
                  <b:IntegerBox b:id="nbItems" ui:field='nbItems' text='1000' />
                </b:FormGroup>
              </b:Column>
              <b:Column size='MD_6'>
                <b:FormGroup>
                  <b:FormLabel for="nbIterations">Number of iterations</b:FormLabel>
                  <b:IntegerBox b:id="nbIterations" ui:field='nbIterations' text='100' />
                </b:FormGroup>
              </b:Column>
            </b:Row>

            <b:Button type="PRIMARY" ui:field='launchBtn'>Launch</b:Button>

          </b:FieldSet>
        </b:Form>

        <b:Hr />

        <b:Row ui:field='resultRow' />

      </g:FlowPanel>
    </b:Container>

  </g:ScrollPanel>

</ui:UiBinder>
