<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

  <g:HTMLPanel>

    <h1>gwt-jackson</h1>

    <div>
      <span>Number of items :</span>
      <g:IntegerBox ui:field='nbItems' text='1000' />
    </div>

    <div>
      <span>Number of iterations :</span>
      <g:IntegerBox ui:field='nbIterations' text='100' />
    </div>

    <div>
      <g:Button ui:field='launchBtn'>Launch</g:Button>
    </div>

    <h3>Result :</h3>
    <div>
      <span>Serialization average time (ms) :</span>
      <g:InlineLabel ui:field='resultSer' />
    </div>
    <div>
      <span>Deserialization average time (ms) :</span>
      <g:InlineLabel ui:field='resultDeser' />
    </div>

  </g:HTMLPanel>

</ui:UiBinder>
